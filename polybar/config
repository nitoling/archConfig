[colors]
background = #00303030
background-alt = #444
foreground = #dfdfdf
foreground-alt = #777
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
accent = #4DD0E1

[bar/top]
width = 100%
height = 30
radius = 0
fixed-center = false

monitor = ${env:MONITOR:}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 4
line-color = #f00

border-size = 1
border-color = #00000000

padding-left = 1
padding-right = 3

module-margin-left = 0
module-margin-right = 1

font-0 = Noto Sans:size=12
