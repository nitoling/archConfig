font-2 = Noto Sans Symbols2:size=12

modules-left = bspwm
modules-center = 
modules-right = cpu memory wlan eth volume battery temperature date

tray-position = right
tray-padding = 0

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

